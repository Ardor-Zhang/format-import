{
	"private": true,
	"version": "0.0.9",
	"repository": {
		"type": "git",
		"url": "https://github.com/ardor-zhang/format-import.git"
	},
	"name": "format-import",
	"icon": "images/icon.png",
	"displayName": "Format Import",
	"description": "format import",
	"author": "ardor-zhang",
	"publisher": "ardor-zhang",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Linters",
		"Formatters"
	],
	"activationEvents": [
		"onCommand:format-import.checkAll",
		"onCommand:format-import.rules",
		"onLanguage:vue",
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onLanguage:javascriptreact",
		"onLanguage:typescriptreact"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "format-import.checkAll",
				"category": "format-import",
				"title": "checkAll"
			},
			{
				"command": "format-import.rules",
				"category": "format-import",
				"title": "rules"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"pack": "vsce package",
		"release:vsce": "vsce publish",
		"release:github": "standard-version",
		"release": "yarn release:github && yarn release:vsce"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.8.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"standard-version": "^9.3.2",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0"
	}
}
